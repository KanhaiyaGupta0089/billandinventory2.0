  <script>
    window.addEventListener('load',async function(){

      
      let udhar=document.querySelector('.udhar')
      let proCount=document.querySelector('.product')
      let qinh=document.querySelector('.quanityhand')
      let invoice=document.querySelector('.invoice')
      let psell=document.querySelector('.pselled')
      let topselling=document.querySelectorAll('.topselling')
      //Fetching all udhar khata for its length
      let data=await fetch("https://billandinventory2-0.onrender.com/user/all-udhar")
      let resp=await data.json()
      console.log(resp)
      udhar.textContent=resp.length
      //counting all product in the inventory
