      let countResp=await count.json()
      console.log(countResp)
      proCount.textContent=countResp.count;
      
      
      let bill=await fetch("https://billandinventory2-0.onrender.com/bill/bill-count") 
      let billCount=await bill.json()
      // console.log(billCount)
      invoice.textContent=billCount.billCount
      psell.textContent=billCount.pselled[0].totalProductsAcrossBills
      let proArray=billCount.pselled[0].totalProductsById
      proArray.sort((a,b)=>{
        return b.count-a.count
      })
      // console.log(proArray)
      let pname,pimage,pquantity
      let topArr=Array.from(topselling)
      
      let pdata="";
      console.log(proArray);
      let ct=0
      
      for(i=0;i<proArray.length&&ct<2;i++){
        
        
          let pid=proArray[i].productId
          console.log(pid);
          
        let data=await fetch(`https://billandinventory2-0.onrender.com/product/search/${pid}`)
        pdata=await data.json()
        if(pdata!=null){
        ct++;
        console.log(pdata);
        }else{
        // console.log(pdata);
        continue;
      }
      
        
        // if(!pdata){
        //   let pid2=proArray[i+1].productId
        //   let data=await fetch(`https://billandinventory2-0.onrender.com/product/search/${pid2}`)
        // pdata=await data.json()
          
        // }
        // console.log("pdata is",pdata)
          let {ProductName,ProductImage,ProductQuantity}=pdata
          
          topArr[ct-1].querySelector('img').src=ProductImage
          topArr[ct-1].querySelector('.prodname').textContent=ProductName
          topArr[ct-1].querySelector('.prodqty').textContent=`StockLeft:${ProductQuantity}`


          
          
      }
      // let obj={
      //       'CustomerName':bill.CustomerName,
      //       'Date':bill.BillDate.toDateString(),
      //       'ProductCount':bill.Products.length,
            
      //   }
      //   obj['Amount']=bill.BillAmount
       let daysell=document.querySelector('.daySell')
       let tprod=document.querySelector('.totalProd')
       let tinvo=document.querySelector('.bills')
       
      let dayData=await fetch("https://billandinventory2-0.onrender.com/user/day-data")
      let dayBook=await dayData.json()
      console.log(dayBook)
      let tamount=0
      let tproduct=0
      dayBook.map((bill)=>{
        tamount+=Number(bill.Amount)
        tproduct+=Number(bill.ProductCount)
      })
      console.log(tamount)
      console.log(dayBook.length)
      daysell.textContent=`₹ ${tamount}`
      tprod.textContent=tproduct
      tinvo.textContent=dayBook.length
      

      
