    <style type="text/css">
        /* Dark mode background and text styling */
        
        

        body {
            background-color: #1e1e2f;
            color: #e0e0e0;
            font-family:Arial, Helvetica, sans-serif;
            margin: 0;
            padding: 20px;
            text-align: center;
            
        }

        h1 {
            color: #ff8c00;
            margin-bottom: 20px;
        }

        /* Pagination link styling */
        a {
            color: #61dafb;
            margin-right: 10px;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #ff8c00;
        }

        /* Table styling */
        table {
            width: 80%;
            margin: 0 auto;
            border-collapse: collapse;
            overflow: hidden;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        }

        th {
            background-color: #33334d;
            color: #fff;
            padding: 12px;
        }

        .tdata:nth-child(odd) {
            background-color: #2b2b3d;
        }

        .tdata:nth-child(even) {
            background-color: #3c3c5b;
        }

        td {
            padding: 12px;
            color: #e0e0e0;
            border: 1px solid #444;
            font-size: 18px;
            
        }

        img {
            border-radius: 5px;
            transition: transform 0.3s ease;
        }

        img:hover {
            transform: scale(1.1);
        }

        /* Responsive styling */
        @media (max-width: 768px) {
            table {
                width: 100%;
            }

            img {
                height: 12vh;
                width: 20vw;
            }
        }
    </style>
</head>
<body>
    <h1>Product Inventory</h1>
    
    <% for(let i = 2; i <= pagecount; i++) { %>
        <a href="/product/entry?page=<%= i %>">page<%= i %></a>
    <% } %>
    <div class="form-group">

        <label for="productName">Search : </label>
        <input type="text" name="ProductName" class="form-control" id="productName" placeholder="Enter product name" oninput="handleOnInput()">
    </div>
    <h2>Total Product =<span style="color: yellow;"><%=count%></span></h2>
    

    <table>
        <thead>
