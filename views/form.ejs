<script>
    const successMessage = <%- JSON.stringify(successMessage) %>;
    if (successMessage && successMessage.length > 0) {
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: successMessage[0],
            showConfirmButton: false,
            timer: 1500
        });
    }
</script>

